{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false
  },
  "include": [
    "src",
    "src/index.ts",
    "src/utils/ColorUtils.json",
    "src/utils/EmojiUtils.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}